- active_series = site.release_series.nil? ? nil : site.release_series.values.select{|s| s.displayed && !s.hidden}
- releases_active = false
- active_series.each do |series|
  - if page.real_page.output_path.start_with?("/releases")
    - releases_active = true

.hidden-lg.hidden-md.hidden-sm
  %button.navbar-toggle.docssubmenu-toggle.collapsed(data-toggle = "collapse" data-target="#docssubmenu" style = "float:none; background-color:#656565; border-color: #656565; width: 100%; color: #fff;")
    Navigation Menu

#docssubmenu.collapse
  .doc-pills
    %ul.nav.nav-pills.nav-stacked
      %li.item.dropdown{:class => "#{'active' if page.real_page.output_path.start_with?("/documentation") && !page.real_page.output_path.start_with?("/documentation/online-resources") && !page.real_page.output_path.start_with?("/documentation/faq")}"}
        %a{:href => "#", :class => "dropdown-toggle", :data => {:toggle => "dropdown"}} Documentation
        .icon
          %span.caret-right
        %ul.dropdown-menu.nav.nav-pills.nav-stacked
          %li.item{:class => "#{'active' if page.real_page.output_path.start_with?("/documentation") && !page.real_page.output_path.start_with?("/documentation/online-resources") && !page.real_page.output_path.start_with?("/documentation/faq")}"}
            %a(href="/documentation/") Overview
          - unless active_series.nil? || active_series.empty?
            - active_series.each do |series|
              %li.item{:class => "#{'active' if releases_active && page.real_page.output_path.start_with?("/documentation/debezium/#{series.version}/")}"}
                %a{:href => "/documentation/reference/#{series.version}/"}
                  .version
                    #{series.version}
                  - if series.latest_stable || series.latest
                    .version-label
                      %span.label{:class => "#{series.latest_stable ? 'label-stable' : 'label-development'}"}
                        #{series.latest_stable ? 'latest stable' : 'development'}
      %li.item.dropdown{:class => "#{'active' if releases_active}"}
        %a{:href => "#", :class => "dropdown-toggle", :data => {:toggle => "dropdown"}} Releases
        .icon
          %span.caret-right
        %ul.dropdown-menu.nav.nav-pills.nav-stacked
          %li.item{:class => "#{'active' if releases_active && page.real_page.output_path.start_with?("/releases/index")}"}
            %a(href="/releases/") Overview
          - unless active_series.nil? || active_series.empty?
            - active_series.each do |series|
              %li.item{:class => "#{'active' if releases_active && page.real_page.output_path.start_with?("/releases/#{series.version}/")}"}
                %a{:href => "/releases/#{series.version}/"}
                  .version
                    #{series.version}
                  - if series.latest_stable || series.latest
                    .version-label
                      %span.label{:class => "#{series.latest_stable ? 'label-stable' : 'label-development'}"}
                        #{series.latest_stable ? 'latest stable' : 'development'}
      %li.item.dropdown{:class => "#{'active' if page.real_page.output_path.start_with?('/documentation/online-resources')}"}
        %a(href="/documentation/online-resources") Resources on the Web
        .icon
          %i.icon-globe
      %li.item.dropdown{:class => "#{'active' if page.real_page.output_path.start_with?('/community/users')}"}
        %a(href="/community/users") Who's using Debezium?
        .icon
          %i.icon-laptop
      %li.item{:class => "#{'active' if page.real_page.output_path.start_with?('/roadmap')}"}
        %a(href="/roadmap") Roadmap
        .icon
          %i.icon-road
      %li.item{:class => "#{'active' if page.real_page.output_path.start_with?('/community/contribute')}"}
        %a(href="/community/contribute") Contribute
        .icon
          %i.icon-code
      %li.item{:class => "#{'active' if page.real_page.output_path.start_with?('/community/code-of-conduct')}"}
        %a(href="/community/code-of-conduct") Code of Conduct
        .icon
          %i.icon-file
      %li.item{:class => "#{'active' if page.real_page.output_path.start_with?('/documentation/faq')}"}
        %a(href="/documentation/faq") FAQ
        .icon
          %i.icon-question-sign
  %p
  .doc-pills
    %ul.nav.nav-pills.nav-stacked
      %li.item
        %a(href="http://www.github.com/debezium/") Source Code
        .icon
          %i.icon-github
      %li.item
        %a(href="http://issues.redhat.com/projects/DBZ/issues") Issues
        .icon
          %i.icon-tasks
      %li.item
        %a(href="http://www.twitter.com/debezium/") Twitter
        .icon
          %i.icon-twitter
      %li.item
        %a(href="http://www.gitter.im/debezium/user") Chat
        .icon
          %i.icon-comments
      %li.item
        %a(href="https://groups.google.com/forum/#!forum/debezium") Mailing List
        .icon
          %i.icon-group
