      .panel-body
        %ul.list-group
          %li.list-group-item{:class=>"#{'active' if page.real_page.output_path.start_with?('/docs/concepts') }" }<
            %a(href="/docs/concepts") Concepts
          %li.list-group-item{:class=>"#{'active' if page.real_page.output_path.start_with?('/docs/tutorial') }" }<
            %a(href="/docs/tutorial") Tutorial
          %li.list-group-item{:class=>"#{'active' if page.real_page.output_path.start_with?('/docs/install') }" }<
            %a(href="/docs/install") Installing Debezium
          %li.list-group-item{:class=>"#{'active' if page.real_page.output_path.start_with?('/docs/embedded') }" }<
            %a(href="/docs/embedded") Embedding Debezium

