.navbar.navbar-inverse.navbar-fix
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#navbar-1")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand(href="/")
        %img{:src => "/images/color_white_debezium_type_600px.svg", :style => "height: 32px; margin-right: 5px; margin-top: -5px;"}
      -#  %img{src: "#{site.project_images_url}/example-logo.png", alt:"Debezium", width: "160px"}
    .collapse.navbar-collapse#navbar-1
      %ul.nav.navbar-nav.pull-right
        %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/docs/faq/') }" }<
          %a(href="/docs/faq/") FAQ
        %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/docs/') && ! page.real_page.output_path.start_with?('/docs/faq/') }" }<
          %a(href="/docs/") DOCS
        %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/community/') }" }<
          %a(href="/community/") COMMUNITY
        %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/blog/') }" }<
          %a(href="/blog/") BLOG
