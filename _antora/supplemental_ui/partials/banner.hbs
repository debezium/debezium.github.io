{{!--
    This partial is responsible for rendering one of 3 banners at the top of each article:
        banner-current.hbs
        banner-nightly.hbs
        banner-development.hbs
        banner-outdated.hbs
--}}

{{#if (eq page.version page.attributes.version-nightly)}}
    {{!-- For version that equals the nightly defined in playbook, add nightly banner --}}
    {{> banner-nightly}}
{{else if (gt page.version page.attributes.version-current)}}
    {{!-- For version that greater then the current defined in playbook, add development banner --}}
    {{> banner-development}}
{{else if (eq page.version page.attributes.version-current)}}
    {{!-- For version that equals the current defined in playbook, add current banner --}}
    {{> banner-current}}
{{else}}
    {{!-- For all other scenarios, considered outdated --}}
    {{> banner-outdated}}
{{/if}}