{{!--
    This partial is responsible for rendering one of 3 banners at the top of each article:
        banner-current.hbs
        banner-development.hbs
        banner-outdated.hbs
--}}

{{#if (eq page.displayVersion page.attributes.version-devel)}}
    {{!-- For antora.yml that references nightly or a version greater than current defined in playbook, add development banner --}}
    {{> banner-development}}
{{else if (eq page.displayVersion page.attributes.version-current)}}
    {{!-- For version that equals the current defined in playbook, add current banner --}}
    {{> banner-current}}
{{else if (eq page.displayVersion 'nightly')}}
    {{!-- For version that equals the current defined in playbook, add current banner --}}
    {{> banner-nightly}} 
{{else}}
    {{!-- For all other scenarios, considered outdated --}}
    {{> banner-outdated}}
{{/if}}